#include "stm32f4xx.h"

#ifndef LED_HPP_
#define LED_HPP_

class GPIO {
private:
	GPIO_TypeDef *port;
	uint8_t pin;
public:
	GPIO(GPIO_TypeDef *port, uint8_t pin, bool isOutput) :
			port(port), pin(pin) {

	}

	void toggle();
	void set();
	void reset();
	bool read();
};
#endif /* LED_HPP_ */
