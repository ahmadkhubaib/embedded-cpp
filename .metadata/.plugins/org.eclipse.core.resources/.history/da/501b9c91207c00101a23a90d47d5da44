#ifndef ADC_CUSTOM_HPP_
#define ADC_CUSTOM_HPP_

#include "stm32f4xx.h"

class ADC_CUSTOM {
private:
	ADC_TypeDef* adcX;
	GPIO_TypeDef* gpioX;
	uint8_t pin;
public:
	ADC_CUSTOM(ADC_Typedef* adcX, GPIO_TypeDef* gpioX, uint8_t pin);

	void init();
	void start_conversion();
	uint32_t read();

};




#endif /* ADC_CUSTOM_HPP_ */
