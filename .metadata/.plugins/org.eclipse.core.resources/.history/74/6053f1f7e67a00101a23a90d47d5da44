#ifndef TIMEBASE_HPP_
#define TIMEBASE_HPP_

#include "stm32f4xx.h"

class TimeBase {
private:
	    static volatile uint32_t msTicks; // Variable to store milliseconds ticks

	    public:
	    static void init();
	    static void delay(uint32_t delayMs);
	    static uint32_t getTicks();
	    static void tickIncrement();
};

#endif /* TIMEBASE_HPP_ */
