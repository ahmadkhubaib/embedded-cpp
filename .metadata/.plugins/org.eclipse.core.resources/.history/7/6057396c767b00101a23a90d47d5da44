#ifndef ADC_HPP_
#define ADC_HPP_

#include "stm32f4xx.h"

class ADC_OBJ {
private:
	ADC_TypeDef* adc;
	GPIO_TypeDef* gpio;
	uint8_t pin;
public:
	ADC_OBJ(ADC_Typedef* adc, GPIO_TypeDef* gpio, uint8_t pin);
	void init();
	void start_conversion();
	uint32_t read();

};




#endif /* ADC_HPP_ */
